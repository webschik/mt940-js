{
    "name": "mt940-js",
    "version": "1.1.0",
    "description": "An isomorphic Javascript library for working with MT940 format",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^13.7.7",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "coveralls": "^3.1.1",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "lint-staged": "^12.1.7",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.4"
    },
    "scripts": {
        "test": "jest",
        "test:ci": "jest --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint .",
        "format": "prettier --check '{src,__tests__/unit}/**/*.{js,ts,json,md}' && prettier --check '*.{js,ts,json,md}'",
        "format:fix": "prettier --write '{src,__tests__/unit}/**/*.{js,ts,json,md}' && prettier --write '*.{js,ts,json,md}'",
        "build": "npm run format && npm run lint && rm -rf lib && tsc",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/webschik/mt940-js.git"
    },
    "keywords": [
        "JS",
        "isomorphic",
        "mt940"
    ],
    "author": "webschik",
    "license": "MIT",
    "dependencies": {
        "jest-coverage-badges": "^1.1.2"
    },
    "lint-staged": {
        "*.{js,ts}": "eslint --cache --fix",
        "*.{js,ts,json,md}": "prettier --write"
    }
}
